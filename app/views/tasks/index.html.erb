<% if logged_in? %>

<h1>タスク一覧</h1>

<ul>
  <% @tasks.each do |task| %>
  <li><%= task.id %>:<%= task.status %> &gt; <%= task.content %>
   <% if current_user == task.user %>
        <%= link_to 'Delete', task, method: :delete, data: { confirm: "本当に削除してよろしいですか？" }, class: 'btn btn-danger btn-sm' %>
   <% end %>
  </li>
  <% end %>
</ul>
<%= link_to '新規タスクの投稿', new_task_path %>
<% else %>
 <p>ログインできませんでした</p>
     <ul>
        <li class="text-center"><%= link_to 'Signup', signup_path, class: 'btn' %></li>
        <li class="text-center"><%= link_to 'Login', login_path, class: 'btn' %></li>
     </ul>
<% end %>